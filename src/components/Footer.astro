---
import { siteConfig } from '../site.config';
---

<footer class="border-t border-white/20 bg-white/5 backdrop-blur-md">
  <div class="mx-auto max-w-6xl px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="font-semibold text-lg mb-4 space-text-gradient">{siteConfig.title}</h3>
        <p class="text-gray-600 dark:text-gray-400">
          {siteConfig.subtitle}
        </p>
      </div>
      
      <div>
        <h3 class="font-semibold mb-4">Navegación</h3>
        <ul class="space-y-2">
          {siteConfig.footer.navLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-semibold mb-4">Sígueme</h3>
        <div class="flex space-x-4">
          {siteConfig.socialLinks.map((link) => (
            <a 
              href={link.href} 
              class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
              aria-label={link.text}
            >
              <span class="sr-only">{link.text}</span>
              <div class="w-6 h-6 bg-current rounded opacity-70"></div>
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-white/10 text-center">
      <p class="text-gray-600 dark:text-gray-400 text-sm">
        © {new Date().getFullYear()} {siteConfig.title}. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>